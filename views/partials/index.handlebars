<h1>Burgers!</h1>

<h2>Burgers with no cheese!</h2>

<ul>
  {{#each burgers}}
    {{#unless cheese}}
      {{> burgers/burger-block cheese=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers with cheese!</h2>

<ul>
  {{#each burgers}}
    {{#if cheese}}
      {{> burgers/burger-block cheese=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="cheese">Cheese?</label><br>
    <input type="radio" name="cheese" value="1" checked> Cheese!<br>
    <input type="radio" name="cheese" value="0">No thanks!
  </div>

  <button type="submit">Add Burger</button>
</form>
